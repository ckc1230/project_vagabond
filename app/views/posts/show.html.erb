<div class="container">
	<div class="row margin-left-20px">
		<div class="col-md-3" id="user-section">
			<div>
  				<%= image_tag @user.photo(:small), class: "img-responsive" %>
 			</div>
			<div id="user-info">
				<p><strong>Name: </strong><%= @user.first_name %> <%= @user.last_name %></p>
				<p><strong>City: </strong><%= @user.current_city %> </p>
				<p><strong>Joined: </strong><%= @user.created_at.strftime("%b. %d, %Y") %></p>
			</div>
		</div>
		<div class="col-md-8">
			<div class="row">
				<div class="col-md-12 user-post">
					<h4 class="user-post-header"><%= @post.title %></h4>
					<p class="user-post-text truncated"><%= @post.post_text %></p>
					<footer>
						<span>Post by <%= link_to "#{@user.first_name} #{@user.last_name}", user_path(@user) %> for <%= link_to "#{@city.name}", city_path(@city)%> </span>
					</footer>
				</div>
			</div>			
		</div>
	</div>
</div>