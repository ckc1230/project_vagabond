<div class="container-fluid">
	<div class="row">
		<div class="col-md-12 photo-container">
			<%= image_tag(@city.image_url, :class => "cover-photo img-responsive", :id => "#{@city.name}") %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 photo-container">
			<h2> Explore Tips from <%= @city.name %>! </h2>
		</div>
	</div>
	<% @posts.each do |post| %>
		<% user = User.find(post.user_id)%>
		<div class="row">
			<div class="col-md-12 blog-comment">
				<div class="row">
					<div class="col-md-3" id="user-section">
						<div>
			  			<%= image_tag user.photo(:small), class: "img-responsive" %>
			 			</div>
						<div id="user-info">
							<p><strong>Name: </strong><%= user.first_name %> <%= user.last_name %></p>
							<p><strong>City: </strong><%= user.current_city %> </p>
							<p><strong>Joined: </strong><%= user.created_at.strftime("%b. %d, %Y") %></p>
						</div>
					</div>
					<div class="col-md-8 user-post">
						<h4  class="user-post-header"><%= post.title %></h4>
						<p><%= post.post_text %></p>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>

